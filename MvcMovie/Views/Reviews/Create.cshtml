@model MvcMovie.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h2>Write a Review</h2>
<h4>for <em>@ViewData["MovieName"]</em></h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="MovieID" class="control-label"></label>
                <input asp-for="MovieID" class="form-control" value="@((int)ViewData["MovieID"])" />
                <span asp-validation-for="MovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Reviewer Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label">Review</label>
                <textarea asp-for="Comment" class="form-control" rows="11"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Review" class="btn btn-default" />
            </div>
        </form>
        <a href="/Movies/Details/@(ViewData["MovieID"])" class="btn btn-primary">Back to Movie Details</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
